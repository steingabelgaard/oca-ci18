#!/bin/bash

#
# Export .pot translations template for installed addons and git push changes.
#

set -ex

# https://github.com/actions/checkout/issues/766
git config --global --add safe.directory $PWD

git config user.name ${OCA_GIT_USER_NAME}
git config user.email ${OCA_GIT_USER_EMAIL}
pip install click-odoo-contrib
# SG: commit message with [ci skip]
click-odoo-makepot --addons-dir ${ADDONS_DIR} -d ${PGDATABASE} --msgmerge-if-new-pot --commit --commit-message="[UPD] Update {addon_name}.pot[ci skip]" --log-level=debug
